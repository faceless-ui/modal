{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.js"
  ]
}
